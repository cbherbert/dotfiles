    (setq TeX-PDF-mode t)
    )
  )

(defun tex-green ()
  (interactive)
  (save-excursion
    (goto-char (region-beginning))
    (insert "\\textcolor{green}{"))
  (goto-char (region-end))
  (insert "}\n"))

